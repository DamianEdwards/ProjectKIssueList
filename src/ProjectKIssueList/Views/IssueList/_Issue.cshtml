@model IssueWithRepo

<div class="row">
    <div class="col-md-1">
        @if (Model.Issue.Assignee != null)
        {
            <a href="@Model.Issue.Assignee.HtmlUrl">
                <img style="margin:0.1em" height="32" width="32" src="@(Model.Issue.Assignee.AvatarUrl ?? "https://avatars1.githubusercontent.com/u/583231?v=3")" title="@Model.Issue.Assignee.Login" />
            </a>
        }
    </div>

    <div class="col-md-1">
        <span style="margin:0.1em; font-size: large">#<a href="@Model.Issue.HtmlUrl">@Model.Issue.Number</a></span>
    </div>

    <div class="col-md-10">
        <div><strong>@Model.Issue.Title</strong></div>

        @foreach (var label in Model.Issue.Labels)
        {
            <span class="label" style="background-color: #@label.Color; color: #@ColorMath.GetHexForeColorForBackColor(label.Color)">@label.Name</span>
        }

        @if (Model.WorkingStartTime != null)
        {
            <span class="badge pull-right" style="margin-left: 4px" data-toggle="tooltip" data-placement="bottom" title="Started working on @Model.WorkingStartTime.Value.Date.ToLongDateString()">Started working @Model.WorkingStartTime.Value.ToDaysAgo()</span>
        }
        <span class="badge pull-right" style="margin-left: 4px">@(Model.Issue.Milestone?.Title ?? "<no milestone>")</span>
        <span class="badge pull-right" style="margin-left: 4px">@Model.RepoName</span>
    </div>
</div>
